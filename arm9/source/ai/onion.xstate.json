{
  "id": "onion",
  "initial": "idle",
  "states": {
    "idle": {
      "on": {
        "NUTRIENTS_CONSUMED": {
          "target": "reproducing",
          "actions": "addSeeds"
        }
      }
    },
    "reproducing": {
      "initial": "bouncing",
      "on": {
        "NUTRIENTS_CONSUMED": {
          "target": "reproducing",
          "actions": "addSeeds"
        }
      },
      "states": {
        "bouncing": {
          "on": {
            "ANIMATION_ENDED": "windingUp"
          }
        },
        "windingUp": {
          "on": {
            "ANIMATION_ENDED": {
              "target": "moreSeedsLeft",
              "actions": "ejectSeeds"
            }
          }
        },
        "dispersingSeeds": {
          "after": {
            "667": {
              "target": "moreSeedsLeft",
              "actions": "ejectSeeds"
            }
          }
        },
        "moreSeedsLeft": {
          "on": {
            "": [
              {
                "target": "dispersingSeeds",
                "cond": "moreSeedsLeft"
              },
              {
                "target": "windingDown"
              }
            ]
          }
        },
        "windingDown": {
          "on": {
            "ANIMATION_ENDED": "done"
          }
        },
        "done": {
          "type": "final"
        }
      },
      "onDone": "idle"
    }
  }
}